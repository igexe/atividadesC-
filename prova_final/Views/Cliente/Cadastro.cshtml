@{
    ViewData["Title"]="Cadastro de Cliente";
}

<form>
    <div class="form-group">
        <label for="CodigoFiscal">CPF/CNPJ</label>
        <input type="text" class="form-group" id="CodigoFiscal" name="CodigoFiscal" placeholder="CPF/CNPJ">
    </div>
    <div class="form-group">
        <label for="InscricaoEstatudal">Inscrição Estadual</label>
        <input type="text" class="form-group" id="InscricaoEstatudal" name="InscricaoEstatudal" maxlength="15" placeholder="Inscrição Estadual" onkeypress="return isNumberKey(event)">
    </div>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-group" id="Nome" name="Nome" placeholder="Nome">
    </div>
    <div class="form-group">
        <label for="NomeFantasia">Nome Fantasia</label>
        <input type="text" class="form-group" id="NomeFantasia" name="NomeFantasia" placeholder="Nome Fantasia">
    </div>
    <div class="form-group">
        <label for="Endereco">Endereço</label>
        <input type="text" class="form-group" id="Endereco" name="Endereco" placeholder="Endereço">
    </div>
    <div class="form-group">
        <label for="Numero">Número</label>
        <input type="number" class="form-group" id="Numero" name="Numero" placeholder="00">
    </div>
    <div class="form-group">
        <label for="Bairro">Bairro</label>
        <input type="text" class="form-group" id="Bairro" name="Bairro" placeholder="Bairro">
    </div>
</form>

<script type="text/javascript">
    function isNumberKey(evt){
        var charCode=(evt.which) ? evt.which : evt.keyCode;
        
        if (charCode > 31 && (charCode < 48 || charCode > 57)){
            return false;
        }
        else{return true;}
    }
</script>
