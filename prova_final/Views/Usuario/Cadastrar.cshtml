@model prova_final.Models.UsuarioModel

@{
    ViewData["Title"] = "Cadastrar Usuário";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    body {
        background: linear-gradient(120deg, #2980b9, #6dd5fa);
        margin: 0;
        height: 100vh;
    }

    .register-wrapper {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        max-width: 500px;
        width: 100%;
        border-radius: 15px;
        box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        background-color: white;
        padding: 2rem;
        border-radius: 15px;
    }

    .form-label {
        margin-top: 1rem;
        font-weight: 500;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
    }
</style>

<div class="register-wrapper">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Cadastro de Usuário</h2>

            <form asp-action="Cadastrar" asp-controller="Usuario" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Usuario" class="form-label">Usuário</label>
                    <input asp-for="Usuario" class="form-control form-control-sm" placeholder="Digite seu nome de usuário" />
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Senha" class="form-label">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control form-control-sm" placeholder="Crie uma senha" />
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fa fa-user-plus"></i> Cadastrar
                </button>
                 @if (!string.IsNullOrEmpty(ViewBag.Errors))
            {
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@Html.Raw(ViewBag.Errors)',
                        timer: 3000,
                        showConfirmButton: false
                    });
                </script>
            }
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" asp-controller="Usuario">Já tem conta? Faça login</a>
            </div>
        </div>
    </div>
</div>